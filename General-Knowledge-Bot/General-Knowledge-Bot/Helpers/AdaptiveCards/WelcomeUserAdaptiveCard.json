{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "size": "Medium",
          "weight": "Bolder",
          "separator": true,
          "text": "%welcomeCardTitleText%"
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "%welcomeCardContentPart1%",
          "wrap": true
        },
        {
          "type": "TextBlock",
          "spacing": "Medium",
          "text": "%welcomeCardContentPart2%",
          "wrap": true
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "%bulletListItem1%",
          "wrap": true,
          "spacing": "Default"
        },
        {
          "type": "TextBlock",
          "text": "%bulletListItem2%",
          "wrap": true,
          "spacing": "Default"
        },
        {
          "type": "TextBlock",
          "text": "%bulletListItem3%",
          "wrap": true,
          "spacing": "Default"
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "wrap": true,
          "spacing": "Default",
          "text": "%welcomeCardContentPart3%"
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "wrap": true,
          "spacing": "Default",
          "text": "%tourIntroText%"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "%takeATourButtonText%",
      "data": {
        "msteams": {
          "type": "messageBack",
          "displayText": "%takeATourButtonText%",
          "text": "%takeATourButtonText%"
        }
      }
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}