{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "size": "Medium",
          "weight": "Bolder",
          "separator": true,
          "text": "%responseCardTitleText%"
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "%questionLineText%",
          "wrap": true
        },
        {
          "type": "TextBlock",
          "spacing": "Medium",
          "text": "%answerLineText%",
          "wrap": true
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "%viewFullArticleButtonText%",
      "url": "http://adaptivecards.io"
    },
    {
      "type": "Action.OpenUrl",
      "title": "%viewRelatedArticlesButtonText%",
      "url":  "https://www.google.com"
    },
    {
      "type": "Action.ShowCard",
      "title": "%giveFeedbackButtonText%",
      "card": {
        "type": "AdaptiveCard",
        "version": "1.0",
        "body": [
          {
            "type": "TextBlock",
            "wrap": true,
            "text": "%feedbackQuestionText%"
          },
          {
            "type": "Input.ChoiceSet",
            "title": "Feedback",
            "placeholder": "%inputChoiceSetPlaceholderText%",
            "choices": [
              {
                "title": "Highly relevant",
                "value": "Highly relevant"
              },
              {
                "title": "Somewhat relevant",
                "value": "Somewhat relevant"
              },
              {
                "title": "Not at all relevant",
                "value": "Not at all relevant"
              }
            ],
            "style": "condensed"
          }
        ],
        "actions": [
          {
            "type": "Action.Submit",
            "title": "%submitFeedbackButtonText%"
          }
        ]
      }
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}