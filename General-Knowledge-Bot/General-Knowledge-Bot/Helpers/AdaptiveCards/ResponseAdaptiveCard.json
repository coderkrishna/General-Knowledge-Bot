{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "size": "Medium",
          "weight": "Bolder",
          "separator": true,
          "text": "%responseCardTitleText%"
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "%questionLineText%",
          "wrap": true
        },
        {
          "type": "TextBlock",
          "spacing": "Medium",
          "text": "%answerLineText%",
          "wrap": true
        }
      ]
    }
  ],
  "actions": [
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}