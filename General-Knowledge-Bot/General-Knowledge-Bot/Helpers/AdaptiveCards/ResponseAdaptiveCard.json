{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "size": "Medium",
          "weight": "Bolder",
          "separator": true,
          "text": "%responseCardTitleText%"
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "%questionLineText%",
          "wrap": true
        },
        {
          "type": "TextBlock",
          "spacing": "Medium",
          "text": "%answerLineText%",
          "wrap": true
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "%askAnExpertButtonText%",
      "data": {
        "msteams": {
          "type": "messageBack",
          "displayText": "%askAnExpertButtonText%",
          "text": "%askAnExpertButtonText%"
        }
      }
    },
    {
      "type": "Action.ShowCard",
      "title": "%giveFeedbackButtonText%",
      "card": {
        "type": "AdaptiveCard",
        "style": "emphasis",
        "body": [
          {
            "type": "TextBlock",
            "text": "Fill out the necessary fields below to give us the feedback on the results.",
            "wrap": true
          },
          {
            "type": "Input.Text",
            "id": "firstName",
            "placeholder": "Please enter your first name"
          },
          {
            "type": "Input.Text",
            "id": "emailAddress",
            "placeholder": "Please enter your email address"
          },
          {
            "type": "Input.Text",
            "placeholder": "Please provide the feedback on the results",
            "id": "resultsRelevancy",
            "isMultiline": true
          }
        ],
        "actions": [
          {
            "type": "Action.Submit",
            "title": "%submitFeedbackButtonText%"
          }
        ],
        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
      }
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}