{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "size": "Medium",
          "weight": "Bolder",
          "text": "Share App Feedback with us"
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "Thank you for taking the time to share the feedback with us. It is critical that my creators know what can be done to make me perform better.",
          "wrap": true,
          "maxLines": 2
        },
        {
          "type": "Input.Text",
          "id": "appFeedback",
          "title": "New Input.Toggle",
          "validation": {
            "necessity": "RequiredWithVisualCue"
          },
          "placeholder": "Please share thoughts...do not hold back on the honesty",
          "isMultiline": true
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Submit"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}